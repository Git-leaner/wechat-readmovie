/* pages/movie/detail/detail.wxss */
@import "../../book/star-tmp/star.wxss";
.container{
  width: 100%;
  height: 100%;
  font-size: 18px;
}
.title{
  width: 100%;
  height: 30px;
  margin-left: 20rpx;
  font-size: 18px;
}
.movie{
  font-size: 13px;
  line-height: 20px;
  padding: 10rpx 20rpx;
}
.movie .mv-pic{
  width: 180rpx;
  height: 240rpx;
}
.movie .mv-cont{
  padding: 20rpx;
  margin-left: 20rpx;
}
/* .movie .mv-cont .cast{
  height: 20px;
} */
.dirt{
  width: 100%;
  height: 20vh;
  padding: 0 20rpx;
  font-size: 13px;
  text-align: center;
}
.dirt image{
  width: 150rpx;
  height: 210rpx;
  border-radius: 10rpx;
  box-shadow: 0 0 5rpx #bbb;
}
.cast{
  width: 100%;
  height: 20vh;
  padding: 0 20rpx;
  font-size: 13px;
  text-align: center;
}
.cast image{
  width: 150rpx;
  height: 210rpx;
  border-radius: 10rpx;
  box-shadow: 0 0 5rpx #bbb;
}
.cast .list,.dirt .list{
  margin-right: 10rpx;
}
.summary{
  line-height: 42rpx;
  padding: 20rpx;
}
.summary .desc{

}
.summary .info {
  font-family: '楷体';
  font-size: 16px;
}
.summary .info .info-title{
  font-weight: bolder;
  color: #05c;
  margin-bottom: 20rpx;  
}
.summary .info .info-list{
  color: #0aa;
}
.left-20{
  margin-left: 20rpx;
}