.comment-detail{
  width: 100%;
  padding: 20rpx 0;
  background: #fff;
  font-size: 16px;
  font-family: '楷体';
}
.detail-txt{
  padding: 30rpx 20rpx;
}
.detail-img{
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  width: 100%;
  height: 30vw;
}
.detail-img image{
  width: 30vw;
  height: 30vw;
  border-radius: 10rpx;
  box-shadow: 0 0 4px #222;
}
.detail-record{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  width:40%;
  height: 50rpx;
  padding: 10rpx;
  margin: 5rpx 40rpx;
  border-radius:10rpx;
  box-shadow: 0 0 9rpx #222;
}
.detail-record image{
  width: 50rpx;
  height: 50rpx;
}
.comment-postscript{
  width: 100%;
  height: 90rpx;
  background: #fff;
  text-indent: 1em;
  line-height: 90rpx;
}
.comment-input{
  width: 100%;
  box-shadow: 0 0 3px #222;
  z-index: 2;
}
.control-panel{
  width: 100%;
  box-shadow: 0 0 3px #222;
  padding: 12rpx 0;
}
.comment-input .control-panel image{
  width: 5vh;
  height: 5vh;
  margin-right: 5rpx;
}
.comment-input .control-panel .user-input{
  width: 72%;
  padding: 5rpx 16rpx;
  -border: 1px solid #368;
  border-radius: 10rpx;
  margin-right: 20rpx;
  box-shadow: 0 0 4px #222;
}
.comment-input .control-panel button{
  height: 5vh;
  line-height: 5vh;
}
.comment-input .control-panel .keyboard{
  width: 72%;
  display: flex;
  flex-direction: 'row';
  justify-content: space-around;
}
.comment-input .control-panel .keyboard .interface{
  width: 81%;
  box-shadow: 0 0 4px #222;
  border-radius: 10rpx;
}
.comment-input .control-panel .keyboard .voice{
  text-align: center;
}
.comment-input .control-panel .keyboard .recording{
  background: rgba(122,42,55,0.8);
  color:#fff;
}
.choosephoto{
  width: 100%;
  height: 13vh;
  padding-top:24rpx;
}
.choosephoto .choose{
  display: flex;
  flex-direction: column;
  margin: 0 20rpx;
  padding: 10rpx;
  font-size: 22rpx;
  text-align: center;
  letter-spacing: 10rpx;
  color:#000;
}
.choosephoto .choose image{
  padding:2vh;
  margin-bottom: 4rpx;
  height: 3vh;
  width:3vh;
  box-shadow: 0 0 8rpx #434343;
  border-radius: 10rpx;
}
.choosephoto text{
  display: inline-block;
  width: 8vh;
  height: 16px;
  -letter-spacing: 0.5em;
  text-align: center;
  text-indent: 5rpx;
  font-size: 13px;
  line-height: 16px;
  color: #000;
}
.choosephoto .imgshowbox{
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 60%;
  height: 10vh;
}
.choosephoto .imgshowbox .showimg{
  position: relative;
  width: 100%;
  height: 100%;
  margin-right: 15rpx;
} 
.choosephoto .showimg image{
  width: 120rpx;
  height: 100%;
  box-shadow: 0;
  padding: 0;
  border-radius: 10rpx;
}
.choosephoto image.clearimg{
  position: absolute;
  right: -15rpx;
  top:-15rpx;
  width: 30rpx;
  height: 30rpx;
  border-radius: 50%;
  box-shadow: 0 0 1px #000;
}