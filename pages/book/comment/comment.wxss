/* pages/book/comment/comment.wxss */
page{height: 100%;}
.comment-container{
  width: 100%;
  height: 100%;
  background: #fff;
}

.comment-title{
  width: 100%;
  height: 8vh;
  text-indent: 1em;
  line-height: 5vh;
  color: #434343;
  background: #fff;
}
.comment-content{
  width: 100%;
  height: 84vh;
  -background: #434343;
}
.comment-content.slideUp {
  height: 71vh;
}
.comment-item{
  width: 100%;
  height: auto;
  padding: 20rpx 0 0;
  font-size: 18px;
  font-family: "楷体";
}
.user-item:after{
  content: '';
  position: absolute;
  width: 100%;
  height: 1px;
  background: linear-gradient(to left,orange,#368);
}
.comment-user{
  position: relative;
  height: 90rpx;
  padding: 10rpx 20rpx;
  -background: #c04;
  border-bottom: 1px dashed #bbb;
}

.comment-user .user-avatar{
  width: 80rpx;
  height:80rpx;
  margin-right: 40rpx;
  border-radius:50%;
}
