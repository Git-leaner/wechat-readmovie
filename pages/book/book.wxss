/* pages/book/book.wxss */
@import "star-tmp/star.wxss";
page{
  height: 100%;
  background-color: #e7e6fb;  
}
.search{
  position: fixed;
  top:5rpx;
  width: 80%;
  height: 60rpx;
  padding:0 20rpx;
  border: 1px solid slategrey;
  box-shadow: 1px 1px 0 #bbb inset;
  font-size: 28rpx;
  border-radius: 25rpx;
  background-color: #e7e6fb;    
  margin: 0 auto;
  z-index: 2;
}
.search .book-search{
  width: 95%;
}
.search image{
  width: 30rpx;
  height: 30rpx;
}
.container{
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
}
.container swiper{
  width: 100%;
  height: 360rpx;
}
.container swiper swiper-item{
  width: 100%;
  height: 100%;
}
.container swiper swiper-item image{
  width: 100%;
  height: 100%;
}

.content{
  width: 100%;
}
.content .item{
  width: 100%;
  height: 360rpx;
  padding: 30rpx 20px;
  border-bottom: 16rpx solid #fff;
  /* background-color: #e1e1e1; */
  color:#999;
  font-size: 12px;
}
.content .item .title{
  width: 100%;
  height: 70%;
  padding-bottom: 30rpx;
  border-bottom: 1rpx solid #bbb;  
  font-size: 28rpx;
  white-space:nowrap;   
}
.content .item .cover{
  width: 20%;
  height: 100%;
}
.item .title .msg{
  width: 78%;
  height: 100%;
  text-align: left;
}
.item .description{
  height: 30%;
  padding: 24rpx 0;   
  font-size: 30rpx;
  line-height: 37rpx;
  font-family: '楷体';
  color: #222;
  overflow:hidden;
  text-overflow:ellipsis; 
  white-space:wrap; 
}
 .item .description text{
  display: block;
  padding-right: 36rpx;
}   
.item .title .msg .name{
  color: #368;
  font-size: 20px;
  letter-spacing: .3em;
}

