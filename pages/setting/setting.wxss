/* pages/setting/setting.wxss */
.container{
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
  width: 100%;
  height: 100%;
  background: #e1e1e1;
}
.user{
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  padding: 0 5%;
  width: 90%;
  height: 360rpx;
  margin-bottom: 10rpx;
  background: #fff;
  box-shadow: 0 10px 10px #ccc;
}
.user image{
  width: 240rpx;
  height: 240rpx;
  background: #fff;
  border-radius: 20rpx;
  box-shadow: 0 0 8px #222;
}
.user .title{
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: flex-start;
  width: 300rpx;
  height: 230rpx;
  padding-left: 40rpx;
  font-family: '楷体';
  font-size:36rpx;
}
.line{
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  width: 100%;
  height: 80rpx;
  margin: 10rpx 0;
  font-size: 32rpx;
  background: #fff;
  box-shadow: 0 10px 10px #ccc;
}
.line image{
  position: relative;
  width: 50rpx;
  height: 50rpx;
  margin: 0 40rpx;
}
.line::after{
  position: absolute;
  content: '>';
  right: 30rpx;
  width: 40rpx;
  height: 40rpx;
  font-weight: bold;
  color:#ccc;
}
.systemInfo{
  position: fixed;
  top:0;
  left:0;
  right: 0;
  bottom: 0;
  margin:auto;
  padding: 20rpx 50rpx;
  width:500rpx;
  height:500rpx;
  background: #fff;
  font-size: 16px;
  border-radius:10rpx;
  box-shadow: 0 0 5px #222;
}
.systemInfo text{
  width:100%;
  line-height: 30px;
}
.btn{
  margin-top: 30rpx;
  width: 100%;
}